.form_style
  = form_for @user, html: {class: 'form-horizontal', role: 'form'} do |f|
    .form-group
      .col-sm-5.sign_up_errors
        - if @user.errors.any?
          %ul
            - @user.errors.full_messages.each do |msg|
              %li= msg
    .form-group
      = f.label :username, class: "col-sm-4 control-label"
      .col-sm-4
        = f.text_field :username, class: 'form-control'
    .form-group
      = f.label :email, class: "col-sm-4 control-label"
      .col-sm-4
        = f.text_field :email, class: 'form-control'
    .form-group
      = f.label :password, class: "col-sm-4 control-label"
      .col-sm-4
        = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation, class: "col-sm-4 control-label style_password_confirmation"
      .col-sm-4
        = f.password_field :password_confirmation, class: 'form-control'
    .form-group
      .col-sm-offset-4.col-sm-4
        = f.submit 'Sign up', class: 'btn btn-primary btn-lg btn-block'  
