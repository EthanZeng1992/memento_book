.schools-sidebar
  .label.label-primary#school-title Your Schools
  .create-school= link_to 'Create School', new_school_path
  %ul.school-list
    - @schools.each do |school|
      %li.school-item
        = link_to school.name, school_path(school)
        %ul.school-groups
          - school.groups.each do |group|
            %li.group-name
              = group.name

